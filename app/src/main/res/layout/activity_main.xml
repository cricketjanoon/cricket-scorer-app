<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cricketjanoon.cricsick1.MainActivity">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="194dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Team2"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="New Scorecard!"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="134dp"
        android:layout_height="28dp"
        android:text="Name of team1: "
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="80dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="139dp"
        android:layout_height="31dp"
        android:text="Name of team2:"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="137dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="194dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Team1"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="68dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="132dp"
        android:layout_height="26dp"
        android:text="20 over match"
        tools:layout_editor_absoluteY="324dp"
        android:layout_marginLeft="-2dp"
        app:layout_constraintLeft_toLeftOf="@+id/radioButton3" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="123dp"
        android:layout_height="27dp"
        android:text="30 over match"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="242dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="129dp"
        android:layout_height="28dp"
        android:text="4 day match"
        tools:layout_editor_absoluteY="296dp"
        android:layout_marginLeft="-6dp"
        app:layout_constraintLeft_toLeftOf="@+id/radioButton4" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="125dp"
        android:layout_height="27dp"
        android:text="3 day match"
        tools:layout_editor_absoluteY="269dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/radioButton2" />

    <Button
        android:id="@+id/sdfasdf"
        android:layout_width="181dp"
        android:layout_height="44dp"
        android:fontFamily="casual"
        android:text="Start match!!"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="419dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select type of the match: "
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="216dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Ground name: "
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="216dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="170dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ground name "
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="249dp" />

</android.support.constraint.ConstraintLayout>
